
@{
    ViewBag.Title = "KullaniciGiris";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}

<h2>KullaniciGiris</h2>

<div class="row login-css">
    @using (Html.BeginForm("KullaniciGiris", "Kullanici", FormMethod.Post))
    {
        <div class="login col-xs-4">
            <form action="/action_page.php">
                <div class="form-group login-input">
                    <input type="email" class="form-control" placeholder="Kullanici Mail" name="kullaniciMail">
                </div>

                <div class="form-group  login-input">
                    <input type="password" class="form-control" placeholder="Kullanıcı password" name="kullaniciSifre">
                </div>
                <button type="submit" class="btn btn-primary kayit">Giriş Yap</button>
            </form>
        </div>
    }
    <div class="login-admin col-xs-8" style="margin-top: -0.1%;">
        <h3>Rent A Car</h3>
        <hr />

        <h5>Kullanıcı Giriş</h5>
    </div>
</div>